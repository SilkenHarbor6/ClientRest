<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClienteRest.View.AddClient">
    <ContentPage.ToolbarItems>
        <ToolbarItem  Text="{Binding action}" Command="{Binding Post}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Nombre" Text="{Binding nombre}"/>
            <Entry Placeholder="Apellido" Text="{Binding apellido}"/>
            <Entry Placeholder="Direccion" Text="{Binding direccion}"/>
            <Entry Placeholder="Telefono" Text="{Binding telefono}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>